{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error",
        "System": "Debug"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "D:\\Web Apis\\Logs\\LoggingWithSerilog\\RRestApiLog.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 4194304,
          "retainedFileCountLimit": 15,
          "rollingInterval": "Minute"
        }
      }
    ]
  },

  "ConnectionStrings": {
    //"DefaultConnection": "Server=.;Database=PurchaseOrder_DB;Trusted_Connection=True;"
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Database=PurchaseOrder_DB;Trusted_Connection=True;MultipleActiveResultSets=true"
  }

}
